@model IEnumerable<SportNews247.Database.User>

@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@Html.ActionLink("Tạo mới", "AddUser", new { @type = "submit", @class = "btn btn-success" })
<br />
<div class="table-responsive">
    <table class="table">
        <tr>

            <th>
                Username
            </th>
            <th>
                Tên thành viên
            </th>
            <th>
                Quyền
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.per)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "EditUser", new { id = item.id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Xóa tài khoản", "DeleteUser", new { id = item.id })
                </td>
            </tr>
        }
    </table>
</div>