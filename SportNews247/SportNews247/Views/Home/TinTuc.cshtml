@model IEnumerable<SportNews247.Database.TinTuc>

@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="sidebar">
            <div class="sidebar-widget">
                <br />
                <h2 class="sw-title">Danh sách tin tức</h2>
                <div class="news-list">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="nl-item">
                                <div class="nl-img">
                                    <img src="@item.img">
                                </div>
                                <div class="nl-title">
                                    <a href="@Url.Action("Xemtintuc","home", new {id = item.id, title = item.tieu_de.ToLower().Replace(" ", "-")})" title="View">@item.tieu_de</a>
                                    <div style="opacity: 0.4;padding-left:15px;">
                                        <span>@(item.tom_tat)...</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="nl-item">
                            Bạn chưa có tin nào!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
