@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="contact">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="contact-form">                                                    
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input type="text" class="form-control" name="username" placeholder="Your Name" />
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" class="form-control" name="password" placeholder="Your Email" />
                            </div>
                        @if (TempData["message"] != null)
                        {
                            <h6 class="text-danger font-weight-bold">@TempData["message"]</h6>
                        }
                            <div><button class="btn" type="submit">Đăng nhập</button></div>                        
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="contact-info">
                        <h3>Đăng nhập</h3>
                        <p>
                            Đăng nhập có thể thêm và cập nhập tin tức nhanh nhất
                        </p>
                        <h4><i class="fa fa-map-marker"></i>96 Định Công</h4>
                        <h4><i class="fa fa-envelope"></i>thethao247@vtn.vn</h4>
                        <h4><i class="fa fa-phone"></i>+84-456-7890</h4>
                        <div class="social">
                            <a href=""><i class="fab fa-twitter"></i></a>
                            <a href=""><i class="fab fa-facebook-f"></i></a>
                            <a href=""><i class="fab fa-linkedin-in"></i></a>
                            <a href=""><i class="fab fa-instagram"></i></a>
                            <a href=""><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}